<class version="1.0"
	name="Bayrell.TimePlanner.AdminService.MainPage" extends="Runtime.Web.Component" 
	module="Bayrell.TimePlanner" model="Runtime.Dict"
>

<use name="Runtime.Core.Message" />
<use name="Runtime.Core.RemoteCallAnswer" />
<use name="Runtime.Web.LayoutModel" />
<use name="Runtime.Web.RenderContainer" />
<use name="Runtime.Web.RenderDriver" />
<use name="Runtime.Web.Route" />
<use name="Runtime.Web.RouteList" />
<use name="Runtime.Web.RouteMiddleware" />
<use name="Runtime.Web.Events.MouseClickEvent" />
<use name="Bayrell.TimePlanner.AdminService.MainPage" />


<script>

/**
 * Route Action
 * @return RenderContainer
 */
@Route{ "uri": "/", "name": "app.main" }
@RouteMiddleware{ "value": "Runtime.Web.Auth.AuthFrontend::checkAuthMiddleware" }
static async RenderContainer MainPage(RenderContainer container)
{
	/* Set title */
	container <= layout <= title <= "Index page";
	container <= layout <= layout_name <= "admin";
	
	/* Set model */
	container <= layout <= page_class <= classof MainPage;
	container <= layout <= page_model <= new Dict();
	
	return [ container ];
}

</script>


<style>
%content{
	padding: 20px;
}
</style>


<template name="render">
	<div class='content'>
		<a class='link' href={ layout.route_prefix ~ "/adminer/" } target="_self">Adminer</a><br/>
		<a class='link' href={ layout.route_prefix ~ "/info/" } target="_self">PHP info</a><br/>
		<a class='link' href={ layout.route_prefix ~ "/env/" } target="_self">Enviroments</a><br/>
	</div>
</template>


<script type="frontend">

</script>

</class>